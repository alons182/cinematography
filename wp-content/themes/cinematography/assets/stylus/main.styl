#fp-nav
	ul li a span
		height 8px
		width 8px
		background rgba(255,255,255,0.5) 

	&.right
		right 0
	span
		background rgba(255,255,255,0.5) 
		border none 
		opacity .7
		transform scale(0.7) 
		transition all .2s ease
		width 12px
		height 12px
		

	&:hover		
	.active
		span
			background white !important
			transform scale(1) 
			opacity 1
@media screen and (min-width: 800px)
	#fp-nav
		&.right
			right 65px 
