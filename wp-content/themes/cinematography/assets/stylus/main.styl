.show-site
	display block !important

.inner
	position relative
	z-index 2
	width 70% //50%
	margin 0 auto
@media screen and (min-width: 800px)
	.inner
		width 50%
		

.header
	position fixed
	top 0
	right 0
	left 0
	width 100%
	height 60px
	z-index 100
	background-color white
	//display none		
	&-logo 
		width 250px
		display none
		&-small
			display block
			width 50px 
			margin-top 5px
	&-menu
		color #000
		display none
		background-color white
		position absolute
		top 55px
		left 0
		right 0
		width 100% 
		padding .5rem
		ul 
			text-align center
		li 
			position relative
		a 
			display block
			padding .5rem
			color azul
			text-transform uppercase
			font-family 'Open Sans', sans-serif
			font-weight 400
			&:hover
				border-bottom 1px solid gris	
	&-btn-menu
		position absolute
		right 0
		top 6px
		background-color transparent
		color #000
		border none
		font-size 1.8rem
		outline none
	&-social
		background-color white
		text-align center
		border-top 1px solid gris
		&-item 
			color oscuro
			padding .3rem .8rem
			font-size 1.2rem
			display inline-block
			&:hover
				color gris

@media screen and (min-width:900px)
	.header
		.inner 
			width 70%
		&-logo 
			display block
			float left
			&-small
				display none
		&-menu
			display block !important
			float right
			position static
			background-color transparent
			width auto
			
			li 
				display inline-block
				vertical-align top
				
			.sub-menu
				display none
				position absolute
				background-color azul
				color white
				width 200px
				font-size 13px
				top 55px
				left 50%
				transform translate(-50%, 0)
				
				a 
					color white
				li 
					display block
					position relative
					
				.sub-menu
					top 0
					left auto
					right -180px
					transform translate(0, 0)
					background-color gris
					
				
				
		&-btn-menu
			display none
		&-social
			position absolute
			right 0
			border-top none
			top 10px
			&-item 
				padding .3rem .5rem

.section
	text-align center
	overflow hidden
		
	h2
		font-size 1.5rem //3rem
		text-transform uppercase
	
	&-title
		margin-bottom 0
	&-bg
		background-size cover
		background-position center center
		background-repeat no-repeat
		background-size cover
		//background-attachment fixed
		position absolute
		top 0
		left 0
		width 100%;
		height 100%
		&:after
			content ''
			background rgba(0,0,0,.35)
			position absolute
			left 0
			right 0
			bottom 0
			top 0
			width 100%
			height 100%
				
		video
			position: absolute;
			left 0
			right: 0;
			bottom: 0;
			min-width: 100%;
			min-height: 100%;
			width: auto;
			height: auto;
			
	article.film
	article.page
		padding-top 3.8rem

